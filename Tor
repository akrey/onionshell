FROM gcc
MAINTAINER Me <andreas.krey@aquilus.com>

RUN mkdir /tmpdir
ADD https://raw.githubusercontent.com/apk/c-utils/master/aenv.c /tmpdir/
RUN gcc -o /tmpdir/aenv /tmpdir/aenv.c

FROM alpine
MAINTAINER Me <andreas.krey@aquilus.com>

RUN mkdir -p /app
COPY --from=0 /tmpdir/aenv /app/aenv
COPY t.sh torrc /app/
RUN chmod 755 /app/t.sh

RUN apk update && apk add tor

CMD ["/app/t.sh"]
